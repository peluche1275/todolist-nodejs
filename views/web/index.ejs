<%- include('header') %>

<%  if(locals.data) { %>

<h2> La todolist de <%= locals.userInfo.username %> !</h2>

<%  for (let i = 0; i<locals.data.length;i++) { 
    if(locals.data[i].done == false) { %>
<li> <%= locals.data[i].text %> <a href="/?del=<%= locals.data[i].todo_id %>"><i class="fas fa-trash-alt"></i></a> </li>
<% }} %>

<form action="/" method="get" class="ui form">

    <div class="field">

        <label for='message'>Ajouter quelquechose à faire : </label>

        <input type="text" name="add" id="add"></input>

    </div>

    <button type="submit" class="ui blue labeld submit icon button">

        Envoyer

    </button>

</form>

<a href="/disconnect"><button class="ui blue labeld submit icon button">

        Déconnexion

    </button></a>

<% } else {%>

<h2>Connexion</h2>

<form action="/" method="post" class="ui form">


    <label for='message'>Nom d'utilisateur</label>

    <input type="text" name="username" id="username"></input>

    <label for='message'>Mot de passe</label>

    <input type="password" name="psswrd" id="psswrd"></input>


    <button type="submit" class="ui blue labeld submit icon button">

        Envoyer

    </button>

</form>

<a href="/inscription" class="header item">Inscription</a>

<% }  %>

<%- include('footer') %>